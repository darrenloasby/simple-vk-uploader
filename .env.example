# VK API Token (required)
VK_TOKEN=your_vk_token_here

# Paths (customize as needed)
# Default: $HOME/Videos if not specified
VIDEOS_DIR=$HOME/Videos
WIREGUARD_DIR=$HOME/wireguard
LOGS_DIR=./logs
TRASH_DIR=./trash

# Docker settings (OrbStack recommended for macOS)
DOCKER_BIN=docker
IMAGE_NAME=vk-uploader

# Performance settings
UPLOAD_CHUNK_SIZE_MB=5
PARALLEL_WORKERS=3
MEMORY_LIMIT=2g
MEMORY_SWAP=3g

# Logging
LOG_LEVEL=INFO
MAX_LOG_LINES=1000

# VPN settings
SKIP_WIREGUARD=false  # Set to true to disable VPN

# Timezone (optional)
TZ=Australia/Sydney
